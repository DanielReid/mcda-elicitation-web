{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mcda.drugis.org/absoluteEffect.json#",
  "title": "MCDA performance table for distribution data",
  "type": "object",
  "required": [
    "criterion",
    "dataSource",
    "alternative",
    "performance"
  ],
  "properties": {
    "alternative": {
      "type": "string"
    },
    "criterion": {
      "type": "string"
    },
    "dataSource": {
      "type": "string"
    },
    "performance": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "array",
          "minItems": 1,
          "maxItems": 2,
          "items": {
            "type":"string",
            "enum": [
              "dnorm",
              "exact",
              "dt",
              "dbeta",
              "dgamma",
              "dsurv",
              "empty"
            ]
          }
        },
        "parameters": {
          "type": "object",
          "properties": {
            "alpha": {
              "type": "number"
            },
            "beta": {
              "type": "number"
            },
            "mu": {
              "type": "number"
            },
            "stdErr": {
              "type": "number"
            },
            "dof": {
              "type": "number"
            },
            "sigma": {
              "type": "number"
            }
          }
        },
        "value": {
          "type": "number"
        },
        "input": {
          "type": "object",
          "properties": {
            "value": {
              "type": "number"
            },
            "sampleSize": {
              "type": "number"
            },
            "mu": {
              "type": "number"
            },
            "sigma": {
              "type": "number"
            },
            "events": {
              "type": "number"
            },
            "lowerBound": {
              "type": "number"
            },
            "upperBound": {
              "type": "number"
            },
            "stdErr": {
              "type": "number"
            },
            "scale": {
              "type": "string",
              "enum": [
                "percentage"
              ]
            }
          }
        }
      }
    }
  }
}